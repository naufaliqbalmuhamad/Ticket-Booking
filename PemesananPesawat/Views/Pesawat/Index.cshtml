@model IEnumerable<PemesananPesawat.Models.PesawatModel>

@{
    ViewBag.Title = "Pesawat";
}

<h2 style="text-align: center; margin-top: 100px">Informasi Pesawat</h2>

<p>
    @Html.ActionLink("Tambah Informasi", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Jadwal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NamaMaskapai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipePesawat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NamaPilot)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Jadwal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NamaMaskapai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipePesawat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NamaPilot)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
