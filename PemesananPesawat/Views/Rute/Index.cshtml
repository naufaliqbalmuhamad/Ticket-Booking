@model IEnumerable<PemesananPesawat.Models.RuteModel>

@{
    ViewBag.Title = "Rute";
}

<h2 style="text-align: center; margin-top: 100px">Rute Penerbangan</h2>

<p>
    @Html.ActionLink("Tambah Rute", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NamaMaskapai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Keberangkatan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kedatangan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomorPenerbangan)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NamaMaskapai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Keberangkatan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kedatangan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomorPenerbangan)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
